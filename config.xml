<?xml version="1.0" encoding="UTF-8"?>

<widget id = "com.manifestinteractive.facing"
        version = "0.8.0"
        xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Facing</name>

    <description>
        100% Open Source iOS &amp; Android App to locate those you can't seem to find, even though they were right next to you. ( True 3D Location Tracking )
    </description>

    <author href="http://manifestinteractive.com" email="hello@manifestinteractive.com">
        Manifest Interactive
    </author>

    <!-- Global Preferences -->
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xff595a5c" />
    <preference name="AutoHideSplashScreen" value="false" />

    <!-- iOS Specific Preferences -->
    <platform name="ios">
        <preference name="ShowSplashScreenSpinner" value="true" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="webviewbounce" value="false" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="target-device"  value="universal" />
        <preference name="deployment-target" value="7.0" />
        <preference name="SuppressesIncrementalRendering" value="true" />
        <preference name="prerendered-icon" value="true" />
        <preference name="BackupWebStorage" value="local" />
    </platform>

    <!-- Android Specific Preferences -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="disallowOverscroll" value="true" />
        <preference name="webviewbounce" value="false" />
    </platform>

    <!-- Plugins -->

    <!-- Core plugins -->
    <!-- ================================================== -->

    <!-- Contacts ( access to the device contacts ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/930 -->
    <gap:plugin name="org.apache.cordova.contacts" version="0.2.11" />

    <!-- Device Info ( describes the device's hardware and software ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/628 -->
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />

    <!-- Device Motion ( access to the device's accelerometer ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/623 -->
    <gap:plugin name="org.apache.cordova.device-motion" version="0.2.6" />

    <!-- Device Orientation ( access to the device's compass ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/629 -->
    <gap:plugin name="org.apache.cordova.device-orientation" version="0.3.5" />

    <!-- Network Information ( information about the device's cellular and wifi connection ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/626 -->
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.7" />

    <!-- Notification ( support for alerts, confirmations, prompts & beeps ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/622 -->
    <gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />

    <!-- Status Bar ( control status bar ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/505 -->
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />

    <!-- Splash Screen ( control splash screen ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/620 -->
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.2.7" />

    <!-- Globalization ( language support ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/614 -->
    <gap:plugin name="org.apache.cordova.globalization" />

    <!-- In App Browser ( Needed to Even Launch Default Browser ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/658 -->
    <gap:plugin name="org.apache.cordova.inappbrowser" />

    <!-- Third party plugins -->
    <!-- A list of available plugins are available at https://build.phonegap.com/plugins -->
    <!-- ================================================== -->

    <!-- Prevent the screen of the mobile device from falling asleep. -->
    <!-- Documentation: https://build.phonegap.com/plugins/842 -->
    <gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />

    <!-- IOS Background Location Enabler -->
    <!-- Documentation: https://build.phonegap.com/plugins/291 -->
    <!-- Adds Geolocation Dependency ( information about the device's location, such as latitude and longitude ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/821 -->
    <gap:plugin name="com.cleartag.plugins.enablebackgroundlocation" version="3.0" />

    <!-- Custom URL Scheme Support ( facing:// ) -->
    <!-- Documentation: https://build.phonegap.com/plugins/844 -->
    <gap:plugin name="nl.x-services.plugins.launchmyapp" version="3.2.0">
        <param name="URL_SCHEME" value="facing" />
    </gap:plugin>

    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>


    <!-- ================================================== -->

    <!-- Define app icon for each platform. -->
    <icon src="www/assets/icon.png" />

    <!-- Built with http://ticons.fokkezb.nl -->
    <icon gap:platform="android" gap:qualifier="hdpi"  src="www/assets/img/icon/android/drawable-hdpi/appicon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi"  src="www/assets/img/icon/android/drawable-ldpi/appicon.png" />
    <icon gap:platform="android" gap:qualifier="mdpi"  src="www/assets/img/icon/android/drawable-mdpi/appicon.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="www/assets/img/icon/android/drawable-xhdpi/appicon.png" />
    <icon gap:platform="android" gap:qualifier="xxhdpi" src="www/assets/img/icon/android/drawable-xxhdpi/appicon.png" />

    <icon gap:platform="ios" width="29"  height="29"  src="www/assets/img/icon/ios/appicon-Small.png" />
    <icon gap:platform="ios" width="58"  height="58"  src="www/assets/img/icon/ios/appicon-Small@2x.png" />
    <icon gap:platform="ios" width="40"  height="40"  src="www/assets/img/icon/ios/appicon-Small-40.png" />
    <icon gap:platform="ios" width="80"  height="80"  src="www/assets/img/icon/ios/appicon-Small-40@2x.png" />
    <icon gap:platform="ios" width="50"  height="50"  src="www/assets/img/icon/ios/appicon-Small-50.png" />
    <icon gap:platform="ios" width="100" height="100" src="www/assets/img/icon/ios/appicon-Small-50@2x.png" />
    <icon gap:platform="ios" width="57"  height="57"  src="www/assets/img/icon/ios/appicon.png" />
    <icon gap:platform="ios" width="114" height="114" src="www/assets/img/icon/ios/appicon@2x.png" />
    <icon gap:platform="ios" width="60"  height="60"  src="www/assets/img/icon/ios/appicon-60.png" />
    <icon gap:platform="ios" width="120" height="120" src="www/assets/img/icon/ios/appicon-60@2x.png" />
    <icon gap:platform="ios" width="72"  height="72"  src="www/assets/img/icon/ios/appicon-72.png" />
    <icon gap:platform="ios" width="144" height="144" src="www/assets/img/icon/ios/appicon-72@2x.png" />
    <icon gap:platform="ios" width="76"  height="76"  src="www/assets/img/icon/ios/appicon-76.png" />
    <icon gap:platform="ios" width="152" height="152" src="www/assets/img/icon/ios/appicon-76@2x.png" />

    <!-- Define app splash screen for each platform. -->
    <gap:splash gap:platform="android" gap:qualifier="port-ldpi"  src="www/assets/img/screen/android/res-en-long-port-ldpi/default.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-mdpi"  src="www/assets/img/screen/android/res-en-long-port-mdpi/default.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-hdpi"  src="www/assets/img/screen/android/res-en-long-port-hdpi/default.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="www/assets/img/screen/android/res-en-long-port-xhdpi/default.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xxhdpi" src="www/assets/img/screen/android/res-en-long-port-xxhdpi/default.png" />

    <gap:splash gap:platform="ios" width="320"  height="480"  src="www/assets/img/screen/ios/Default.png" />           <!-- [X] iPhone Non-Retina (iOS 6.1 and Prior) -->
    <gap:splash gap:platform="ios" width="640"  height="960"  src="www/assets/img/screen/ios/Default@2x.png" />        <!-- [X] iPhone Retina -->
    <gap:splash gap:platform="ios" width="640"  height="1136" src="www/assets/img/screen/ios/Default-568h@2x.png" />   <!-- [X] iPhone Retina 4-inch -->
    <gap:splash gap:platform="ios" width="768"  height="1024" src="www/assets/img/screen/ios/Default-Portrait~ipad.png" />     <!-- [X] iPad Portrait Non-Retina -->
    <gap:splash gap:platform="ios" width="1536" height="2048" src="www/assets/img/screen/ios/Default-Portrait@2x~ipad.png" />  <!-- [X] iPad Portrait Retina -->
    <gap:splash gap:platform="ios" width="1024" height="768"  src="www/assets/img/screen/ios/Default-Landscape~ipad.png" />    <!-- [ ] iPad Landscape Non-Retina -->
    <gap:splash gap:platform="ios" width="2048" height="1536" src="www/assets/img/screen/ios/Default-Landscape@2x~ipad.png" /> <!-- [ ] iPad Landscape Retina -->

    <access origin="*" />

</widget>
